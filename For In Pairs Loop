-- o loop sempre vai rodar a mesma quantidade de vezes que a quantidade de vari√°veis dentro da table



local tablee = {
bro = "color",
hey = "pls",
ok = "no"
}


for chave, valor in pairs (tablee) do
	print(tablee["bro"])
end


-- o resultado seria -- color(3x)

local tablee = {
bro = "color",
hey = "pls",
ok = "no"
}


for chave, valor in pairs (tablee) do
	print(chave .. " : " .. valor)
end

-- o resultado seria -- bro : color, hey : pls, ok : no


local tablee = {
"color",
"pls",
"no"
}


for chave, valor in pairs (tablee) do
	print(chave .. " : " .. valor)
end

-- o resultado seria -- 1 : color, 2 : pls, 3 : no 
